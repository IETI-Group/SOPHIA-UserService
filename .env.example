# Configuración del servidor
PORT=3000
NODE_ENV=development

# Configuración de logging
LOG_LEVEL=info

# Configuración de CORS
CORS_ORIGIN=*

# Configuración de la API
API_VERSION=v1
API_PREFIX=/api

# Configuración de paginación
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100
DEFAULT_SORT_ORDER=desc

# Base de datos (para futuro uso, datos de ejemplo para MongoDB)
# DATABASE_URL=mongodb://localhost:27017/sophia-users
# DB_HOST=localhost
# DB_PORT=27017
# DB_NAME=sophia-users

# JWT (para futuro uso)
# JWT_SECRET=your-super-secret-jwt-key
# JWT_EXPIRE=30d

# API Keys (para futuro uso)
# API_KEY=your-api-key