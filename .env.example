# Configuración del servidor
PORT=3000
NODE_ENV=development

# Configuración de logging
LOG_LEVEL=info

# Configuración de CORS
CORS_ORIGIN=*

# Configuración de la API
API_VERSION=v1
API_PREFIX=/api

# Configuración de paginación
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100
DEFAULT_SORT_ORDER=desc

# Base de datos PostgreSQL
DATABASE_URL=postgres://<usuario>:<contraseña>@<host>:<puerto>/<base_de_datos>?sslmode=<modo_ssl>
DB_SSL=false
# JWT (para futuro uso)
JWT_SECRET=your-super-secret-jwt-key
# JWT_EXPIRE=30d
# AWS Cognito Configuration
COGNITO_USER_POOL_ID=<your_cognito_user_pool_id>
COGNITO_REGION=us-east-2
AUTH_CLIENT_ID=your_cognito_client_id
AUTH_CLIENT_SECRET=your_cognito_client_secret
COGNITO_DOMAIN=<your_cognito_domain>
COGNITO_CALLBACK_URL=http://localhost:3000/api/v1/auth/callback
COGNITO_LOGOUT_URL=http://localhost:3000
COGNITO_ISSUER=https://cognito-idp.us-east-2.amazonaws.com/<your_cognito_user_pool_id>
COGNITO_JWKS_URI=https://cognito-idp.us-east-2.amazonaws.com/<your_cognito_user_pool_id>/.well-known/jwks.json


# API Keys (para futuro uso)
# API_KEY=your-api-key